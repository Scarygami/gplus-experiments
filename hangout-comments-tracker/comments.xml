  <ModulePrefs title="Hangout Comments Tracker">
    <Require feature="rpc"/>
    <Require feature="views"/>
    <Require feature="locked-domain"/>
  </ModulePrefs>
  <Content type="html">
    <![CDATA[
    <link rel="stylesheet" type="text/css" href="<YOUR PATH>comments.css">
    <base target="_blank">
    <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <script src="//hangoutsapi.talkgadget.google.com/hangouts/api/hangout.js?v=1.0"></script>
    <script src="<YOUR PATH>comments.js"></script>
    <script src="https://apis.google.com/js/client.js?onload=onClientReady"></script>
    <div id="search" style="display: none;">
      <h1>Comments Tracker</h1>
      URL: <input id="post_url" name="post_url" style="width: 180px;"> <button id="search_comments">Search</button>
    </div>
    <div id="contents">
      <div id="searching" style="display: none;"><img src="<YOUR PATH>images/spinner.gif" alt="searching" style="border: 0;"> Searching...</div>
      <div id="comments"></div>
    </div>
    ]]>
  </Content>
</Module>
